{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('profil') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('profil') }}
{% endblock %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {% if profile is defined and profile.name is not empty %}
            {% include 'elements/profilnav.html.twig' %}
            <div class="col-md-9">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#overview" data-bs-toggle="tab">Vue d'ensemble</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#edit" data-bs-toggle="tab">Éditer Profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#password" data-bs-toggle="tab">Changer le mot de passe</a>
                    </li>
                </ul>
                <div class="tab-content p-3">
                    <div class="tab-pane fade show active" id="overview">
                        <h5>Profil Détails</h5>
                        <p><strong>Prénom:</strong> {{ profile.firstname }}</p>
                        <p><strong>Nom:</strong> {{ profile.name }}</p>
                        <p><strong>Pseudo:</strong> {{ profile.pseudo }}</p>
                        <p><strong>Biographie:</strong> {{ profile.biography }}</p>
                        <p><strong>Actif:</strong> {{ profile.isActive ? 'Oui' : 'Non' }}</p>
                    </div>
                    <div class="tab-pane fade" id="edit">
                        <h5>Éditer Profil</h5>
<form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    {{ form_start(form, {'attr': {'id': 'profile-form'}}) }}

    <div class="mb-3">
        {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.firstname) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.pseudo, 'Pseudo', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.pseudo) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.biography, 'Biographie', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.biography, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.biography) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.avatarFile, 'Avatar', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.avatarFile, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.avatarFile) }}
    </div>


    <button type="submit" class="btn btn-primary">Enregistrer</button>

    {{ form_end(form) }}
</form>
                    </div>
                    <div class="tab-pane fade" id="password">
                        <h5>Changer le mot de passe</h5>
                        <!-- Inclure le formulaire de changement de mot de passe ici -->
                    </div>
                    <div class="mt-3">
                        <form method="post" action="{{ path('app_profile_delete', {id: profile.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ profile.id) }}">
                            <button class="btn btn-danger">Supprimer le compte</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5>Créer Profil</h5>
                        <form method="post" enctype="multipart/form-data">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button type="submit" class="btn btn-primary">Créer</button>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}