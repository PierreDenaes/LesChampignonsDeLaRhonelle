{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container-fluid bg-login">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 p-4 shadow bg-light rounded my-5">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                
                <h1 class="h3 mb-3 font-weight-bold text-center text-gold">Réinitialiser votre mot de passe</h1>
                
                <p class="text-center mb-4">
                    Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </p>
                
                {{ form_start(requestForm) }}
                    <div class="form-group mb-3">
                        {{ form_widget(requestForm.email, {'attr': {'class': 'form-control shadow-sm', 'placeholder': 'Votre adresse email'}}) }}
                        {{ form_errors(requestForm.email) }}
                    </div>

                    <button class="btn btn-lg btn-gold text-white fw-bold btn-block shadow-lg mt-3">Envoyer le lien de réinitialisation</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
