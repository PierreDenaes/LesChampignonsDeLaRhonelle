{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container-fluid bg-login">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4 my-5 p-4 shadow bg-light rounded">
                <h1 class="h3 mb-3 font-weight-bold text-center text-gold">Réinitialiser votre mot de passe</h1>

                <p class="text-center mb-4">
                    Veuillez entrer un nouveau mot de passe pour réinitialiser votre compte.
                </p>

                {{ form_start(resetForm) }}
                    <div class="form-group mb-3">
                        {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control shadow-sm', 'placeholder': 'Nouveau mot de passe'}}) }}
                        {{ form_errors(resetForm.plainPassword) }}
                    </div>

                    <button class="btn btn-lg btn-gold text-white fw-bold btn-block shadow-lg mt-3">Réinitialiser le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}