{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container-fluid bg-login">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4 p-4 shadow bg-light rounded mt-5 mb-5">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning">
                        {{ message }}
                    </div>
                {% endfor %}

                <h1 class="h3 mb-3 font-weight-bold text-center text-gold fw-bold">Inscrivez-vous</h1>

                {{ form_start(registrationForm) }}
                    <div class="form-group mb-3">
                        <label for="inputEmail">Email</label>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control shadow-sm', 'id': 'inputEmail'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="form-group mb-3">
                        <label for="inputPassword">Mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control shadow-sm', 'id': 'inputPassword'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="form-check mb-4">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label">
                            {{ form_label(registrationForm.agreeTerms) }}
                        </label>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-lg btn-gold text-white fw-bold btn-block shadow-lg mt-4">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}